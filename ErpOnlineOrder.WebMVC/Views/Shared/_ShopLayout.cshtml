<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/shop/images/homepage-one/icon.png">
    <title>@ViewData["Title"] - ERP Online Order</title>

    <link rel="stylesheet" href="~/shop/css/swiper10-bundle.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/shop/css/nouislider.min.css">
    <link rel="stylesheet" href="~/shop/css/aos-3.0.0.css">
    <link rel="stylesheet" href="~/shop/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- ============== HEADER ============== -->
    <header id="header" class="header">
        <div class="header-top-section">
            <div class="container">
                <div class="header-top">
                    <div class="header-profile">
                        <a asp-controller="Shop" asp-action="Account"><span>Tài khoản</span></a>
                        <a asp-controller="Shop" asp-action="Orders"><span>Đơn hàng</span></a>
                        <a href="tel:+84123456789"><span>Hỗ trợ</span></a>
                    </div>
                    <div class="header-contact d-none d-lg-block">
                        <a href="tel:+84123456789">
                            <span>Cần hỗ trợ? Gọi ngay:</span>
                            <span class="contact-number">0123 456 789</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="header-center-section d-none d-lg-block">
            <div class="container">
                <div class="header-center">
                    <div class="logo">
                        <a asp-controller="Shop" asp-action="Index">
                            <img src="~/shop/images/logos/logo.webp" alt="logo">
                        </a>
                    </div>
                    <div class="header-cart-items">
                        <div class="header-search">
                            <button class="header-search-btn" onclick="modalAction('.search')">
                                <span>
                                    <svg width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">

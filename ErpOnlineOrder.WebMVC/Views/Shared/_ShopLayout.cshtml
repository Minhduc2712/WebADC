                            <path d="M12.4012 27.5161C11.167 27.5227 10.1488 26.524 10.1345 25.2928C10.1201 24.0419 11.1528 22.9982 12.3967 23.0066C13.6209 23.0151 14.6422 24.0404 14.6436 25.2623C14.6451 26.4855 13.6261 27.5095 12.4012 27.5161Z" fill="#6E6D79"/>
                            <path d="M22.509 25.2393C22.5193 26.4842 21.5393 27.4971 20.3064 27.5155C19.048 27.5342 18.0272 26.525 18.0277 25.2622C18.0279 24.0208 19.0214 23.0161 20.2572 23.0074C21.4877 22.9984 22.4988 24.0006 22.509 25.2393Z" fill="#6E6D79"/>
                        </svg>
                    </span>
                </a>
            </div>
            <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasShopMenu">
                <div class="offcanvas-header">
                    <a asp-controller="Shop" asp-action="Index">
                        <img src="~/shop/images/logos/logo.webp" alt="logo" style="max-height: 40px;">
                    </a>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <form asp-controller="Shop" asp-action="Products" method="get" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm...">
                            <button type="submit" class="btn btn-dark"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                    <ul class="header-menu" style="flex-direction: column;">
                        <li><a asp-controller="Shop" asp-action="Index"><span class="list-text">Trang chủ</span></a></li>
                        <li><a asp-controller="Shop" asp-action="Products"><span class="list-text">Sản phẩm</span></a></li>
                        <li><a asp-controller="Shop" asp-action="Cart"><span class="list-text">Giỏ hàng</span></a></li>
                        <li><a asp-controller="Shop" asp-action="Checkout"><span class="list-text">Thanh toán</span></a></li>
                        <li><a asp-controller="Shop" asp-action="Orders"><span class="list-text">Đơn hàng</span></a></li>
                        <li><a asp-controller="Shop" asp-action="Account"><span class="list-text">Tài khoản</span></a></li>
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li><a asp-controller="Auth" asp-action="Logout"><span class="list-text">Đăng xuất</span></a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Auth" asp-action="Login"><span class="list-text">Đăng nhập</span></a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Desktop Navigation -->
        <div class="header-bottom d-lg-block d-none">
            <div class="container">
                <div class="header-nav">
                    <div class="category-menu-section position-relative">
                        <div class="empty position-fixed" onclick="tooglmenu()"></div>
                        <button class="dropdown-btn" onclick="tooglmenu()">
                            <span class="dropdown-icon">
                                <svg width="14" height="9" viewBox="0 0 14 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect width="14" height="1"/>
                                    <rect y="8" width="14" height="1"/>
                                    <rect y="4" width="10" height="1"/>
                                </svg>
                            </span>
                            <span class="list-text">Danh mục sản phẩm</span>
                        </button>
                        <div class="category-dropdown position-absolute" id="subMenu">
                            <ul class="category-list">
                                @if (ViewData["ShopCategories"] is List<string> shopCats)
                                {
                                    @foreach (var cat in shopCats)
                                    {
                                        <li class="category-list-item">
                                            <a asp-controller="Shop" asp-action="Products" asp-route-category="@cat">
                                                <div class="dropdown-item d-flex justify-content-between align-items-center">
                                                    <div class="dropdown-list-item d-flex">
                                                        <span class="dropdown-text">@cat</span>
                                                    </div>
                                                    <div class="drop-down-list-icon">
                                                        <span>
                                                            <svg width="6" height="9" viewBox="0 0 6 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                                <rect x="1.5" y="0.818359" width="5.78538" height="1.28564" transform="rotate(45 1.5 0.818359)"/>

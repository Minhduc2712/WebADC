@model ErpOnlineOrder.Application.DTOs.WarehouseExportDTOs.CreateWarehouseExportDto
@{
    ViewData["Title"] = "Tạo phiếu xuất kho";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Tạo phiếu xuất kho</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Xuất kho</a></li>
                <li class="breadcrumb-item active">Tạo mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-file-export me-2"></i>Thông tin phiếu xuất</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Hóa đơn <span class="text-danger">*</span></label>
                            <select name="Invoice_id" class="form-select" required>
                                <option value="">-- Chọn hóa đơn --</option>
                                @if (ViewBag.Invoices != null)
                                {
                                    foreach (var item in ViewBag.Invoices as SelectList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <small class="text-muted">Chọn hóa đơn cần xuất kho</small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Kho xuất <span class="text-danger">*</span></label>
                            <select name="Warehouse_id" class="form-select" required>
                                <option value="">-- Chọn kho --</option>
                                @if (ViewBag.Warehouses != null)
                                {
                                    foreach (var item in ViewBag.Warehouses as SelectList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Đơn vị vận chuyển</label>
                            <input name="Carrier_name" class="form-control" placeholder="VD: Giao hàng nhanh, Viettel Post..." />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Mã vận đơn</label>
                            <input name="Tracking_number" class="form-control" placeholder="Nhập mã vận đơn..." />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Ngày xuất</label>
                            <input name="Export_date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Tạo phiếu xuất
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Hướng dẫn</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <h6><i class="fas fa-lightbulb me-2"></i>Lưu ý:</h6>
                        <ul class="mb-0">
                            <li>Phiếu xuất kho được tạo từ hóa đơn đã xác nhận</li>
                            <li>Mỗi hóa đơn chỉ có thể tạo một phiếu xuất kho</li>
                            <li>Sau khi tạo, phiếu sẽ ở trạng thái "Chờ xử lý"</li>
                            <li>Có thể tách/gộp phiếu xuất kho sau khi tạo</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

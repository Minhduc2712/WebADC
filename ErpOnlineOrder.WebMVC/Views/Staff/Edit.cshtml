@model ErpOnlineOrder.Application.DTOs.AdminDTOs.UpdateStaffAccountDto
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var roles = ViewBag.Roles as List<ErpOnlineOrder.Application.DTOs.PermissionDTOs.RoleDto> ?? new List<ErpOnlineOrder.Application.DTOs.PermissionDTOs.RoleDto>();
    var staffCode = ViewBag.StaffCode as string ?? "";
    var username = ViewBag.Username as string ?? "";
    var currentRoles = ViewBag.CurrentRoles as List<string> ?? new List<string>();
    var isActive = Model.Is_active ?? true;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-user-edit me-2"></i>Chỉnh sửa nhân viên
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Quản lý nhân sự</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-1"></i> Thông tin nhân viên
                    </h6>
                    <span class="badge bg-secondary fs-6">@staffCode</span>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="User_id" />

                        <div class="row">
                            <!-- Thông tin tài khoản -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3"><i class="fas fa-user-circle me-1"></i> Thông tin tài khoản</h6>
                                
                                <div class="mb-3">
                                    <label class="form-label">Tên đăng nhập</label>
                                    <input type="text" class="form-control" value="@username" disabled />
                                    <small class="text-muted">Không thể thay đổi tên đăng nhập</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="Is_active" value="true" id="isActiveSwitch" @(isActive ? "checked" : "")>
                                        <label class="form-check-label" for="isActiveSwitch" id="statusLabel">
                                            @(isActive ? "Đang hoạt động" : "Vô hiệu hóa")
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Thông tin cá nhân -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3"><i class="fas fa-id-card me-1"></i> Thông tin cá nhân</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="Full_name" class="form-label">
                                        Họ và tên
                                    </label>
                                    <input asp-for="Full_name" class="form-control" placeholder="Nhập họ và tên" />
                                    <span asp-validation-for="Full_name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Phone_number" class="form-label">
                                        Số điện thoại
                                    </label>
                                    <input asp-for="Phone_number" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Phone_number" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        Phân quyền 
                                        <a asp-action="AssignRoles" asp-route-id="@Model.User_id" class="btn btn-sm btn-outline-primary ms-2">
                                            <i class="fas fa-external-link-alt me-1"></i>Quản lý quyền
                                        </a>
                                    </label>
                                    <div class="border rounded p-3" style="max-height: 150px; overflow-y: auto;">
                                        @if (roles.Any())
                                        {
                                            @foreach (var role in roles)
                                            {
                                                var isChecked = Model.Role_ids?.Contains(role.Id) == true;
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" 
                                                           name="Role_ids" value="@role.Id" id="role_@role.Id"
                                                           @(isChecked ? "checked" : "")>
                                                    <label class="form-check-label" for="role_@role.Id">
                                                        @role.Role_name
                                                        <small class="text-muted">(@role.Permission_count quyền)</small>
                                                    </label>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">Chưa có role nào</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <div>
                                <a asp-action="ResetPassword" asp-route-id="@Model.User_id" class="btn btn-outline-warning me-2">
                                    <i class="fas fa-key me-1"></i> Reset mật khẩu
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-cog me-1"></i> Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="AssignRoles" asp-route-id="@Model.User_id" class="btn btn-primary">
                            <i class="fas fa-user-shield me-1"></i> Gán quyền chi tiết
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.User_id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i> Xem chi tiết
                        </a>
                        <a asp-action="ResetPassword" asp-route-id="@Model.User_id" class="btn btn-outline-warning">
                            <i class="fas fa-key me-1"></i> Reset mật khẩu
                        </a>
                    </div>
                </div>
            </div>

            <!-- Role hiện tại -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-shield-alt me-1"></i> Role hiện tại
                    </h6>
                </div>
                <div class="card-body">
                    @if (currentRoles.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var roleName in currentRoles)
                            {
                                <li class="mb-2">
                                    <span class="badge bg-primary">
                                        <i class="fas fa-check me-1"></i>@roleName
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0 text-center">
                            <i class="fas fa-info-circle me-1"></i>Chưa có role nào
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Update label when switch changes
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            var label = document.getElementById('statusLabel');
            label.textContent = this.checked ? 'Đang hoạt động' : 'Vô hiệu hóa';
        });
    </script>
}

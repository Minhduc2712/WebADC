@model ErpOnlineOrder.Application.DTOs.DistributorDTOs.CreateDistributorDto
@{
    ViewData["Title"] = "Thêm nhà phân phối";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Thêm nhà phân phối mới</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Nhà phân phối</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thông tin NPP</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Distributor_code" class="form-label">Mã NPP <span class="text-danger">*</span></label>
                            <input asp-for="Distributor_code" class="form-control" placeholder="VD: NPP001..." />
                            <span asp-validation-for="Distributor_code" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Distributor_name" class="form-label">Tên NPP <span class="text-danger">*</span></label>
                            <input asp-for="Distributor_name" class="form-control" placeholder="Nhập tên NPP..." />
                            <span asp-validation-for="Distributor_name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Distributor_address" class="form-label">Địa chỉ</label>
                            <input asp-for="Distributor_address" class="form-control" placeholder="Nhập địa chỉ..." />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Distributor_phone" class="form-label">Điện thoại</label>
                            <input asp-for="Distributor_phone" class="form-control" placeholder="0xxx xxx xxx" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Distributor_email" class="form-label">Email</label>
                            <input asp-for="Distributor_email" class="form-control" type="email" placeholder="email@npp.com" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model ErpOnlineOrder.Application.DTOs.CustomerProductDTOs.UpdateCustomerProductDto
@{
    ViewData["Title"] = "Sửa cấu hình sản phẩm";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var customer = ViewBag.Customer as ErpOnlineOrder.Application.DTOs.CustomerDTO;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-edit me-2 text-primary"></i>Sửa cấu hình sản phẩm</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "CustomerManagement")">Khách hàng</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", new { customerId = customer?.Id })">@(customer?.Full_name ?? "")</a></li>
                <li class="breadcrumb-item active">Sửa</li>
            </ol>
        </nav>
    </div>
    <a href="@Url.Action("Index", new { customerId = customer?.Id })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="table-card">
            <div class="card-header">
                <i class="fas fa-cog me-2"></i>Cấu hình giá và chiết khấu
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Custom_price" class="form-label">Giá riêng (VNĐ)</label>
                        <input asp-for="Custom_price" type="number" class="form-control" min="0" step="0.01" placeholder="Để trống dùng giá gốc" />
                        <span asp-validation-for="Custom_price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Discount_percent" class="form-label">Chiết khấu (%)</label>
                        <input asp-for="Discount_percent" type="number" class="form-control" min="0" max="100" step="0.01" placeholder="0" />
                        <span asp-validation-for="Discount_percent" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Max_quantity" class="form-label">Số lượng tối đa mỗi đơn</label>
                        <input asp-for="Max_quantity" type="number" class="form-control" min="0" placeholder="Không giới hạn" />
                        <span asp-validation-for="Max_quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Is_active" class="form-check-input" type="checkbox" />
                            <label asp-for="Is_active" class="form-check-label">Cho phép đặt hàng</label>
                        </div>
                        <small class="text-muted">Tắt tạm khóa sản phẩm này cho khách hàng</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Lưu
                        </button>
                        <a href="@Url.Action("Index", new { customerId = customer?.Id })" class="btn btn-outline-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

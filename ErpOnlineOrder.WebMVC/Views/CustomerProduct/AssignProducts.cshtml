@model ErpOnlineOrder.Application.DTOs.CustomerProductDTOs.AssignProductsToCustomerDto
@{
    ViewData["Title"] = "Gán sản phẩm cho khách hàng";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var customer = ViewBag.Customer as ErpOnlineOrder.Application.DTOs.CustomerDTO;
    var allProducts = ViewBag.AllProducts as List<ErpOnlineOrder.Application.DTOs.ProductDTO> ?? new List<ErpOnlineOrder.Application.DTOs.ProductDTO>();
    var assignedProductIds = ViewBag.AssignedProductIds as HashSet<int> ?? new HashSet<int>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-box me-2 text-primary"></i>Gán sản phẩm cho khách hàng</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "CustomerManagement")">Khách hàng</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Details", "CustomerManagement", new { id = customer?.Id })">@(customer?.Full_name ?? "")</a></li>
                <li class="breadcrumb-item active">Gán sản phẩm</li>
            </ol>
        </nav>
    </div>
    <a href="@Url.Action("Index", new { customerId = Model.Customer_id })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

@if (customer != null)
{
    <div class="table-card mb-4">
        <div class="card-body p-3">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                     style="width: 50px; height: 50px; font-size: 20px;">
                    @(customer.Full_name?.Length > 0 ? customer.Full_name.Substring(0, 1).ToUpper() : "?")
                </div>
                <div>
                    <strong>@customer.Full_name</strong>
                    <span class="badge bg-secondary ms-2">@customer.Customer_code</span>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="card-header">
                <i class="fas fa-check-square me-2"></i>Chọn sản phẩm để gán
            </div>
            <div class="card-body">
                <form asp-action="AssignProducts" method="post" id="assignForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Customer_id" value="@Model.Customer_id" />

                    <div class="mb-3">
                        <label class="form-label">Chiết khấu mặc định (%)</label>
                        <input type="number" name="Default_discount_percent" class="form-control" style="width: 150px;"
                               placeholder="0" min="0" max="100" step="0.01" />
                        <small class="text-muted">Áp dụng cho tất cả sản phẩm được chọn (có thể sửa sau)</small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="selectAll" />
                            <label class="form-check-label" for="selectAll">Chọn tất cả chưa gán</label>
                        </div>
                    </div>

                    <div class="border rounded p-3 mb-4" style="max-height: 400px; overflow-y: auto;">
                        <div class="row g-2">
                            @foreach (var p in allProducts)
                            {
                                var isAssigned = assignedProductIds.Contains(p.Id);
                                <div class="col-md-6 col-lg-4">
                                    <div class="form-check border rounded p-2 product-item @(isAssigned ? "bg-light" : "")">
                                        @if (!isAssigned)
                                        {
                                            <input class="form-check-input product-checkbox" type="checkbox"
                                                   name="Product_ids" value="@p.Id" id="prod_@p.Id" />
                                        }
                                        else
                                        {
                                            <input class="form-check-input" type="checkbox" disabled checked />
                                        }
                                        <label class="form-check-label w-100" for="prod_@p.Id">
                                            <strong>@p.Product_name</strong>
                                            <span class="badge bg-secondary">@p.Product_code</span>
                                            <span class="badge bg-info">@p.Product_price</span>
                                            @if (isAssigned)
                                            {
                                                <span class="badge bg-success ms-1">Đã gán</span>
                                            }
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!allProducts.Any())
                    {
                        <p class="text-muted">Chưa có sản phẩm nào trong hệ thống.</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" id="btnSubmit">
                            <i class="fas fa-user-tag me-1"></i>Gán sản phẩm đã chọn
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('selectAll')?.addEventListener('change', function() {
        var checkboxes = document.querySelectorAll('.product-checkbox');
        checkboxes.forEach(function(cb) {
            if (!cb.disabled) cb.checked = this.checked;
        }, this);
    });

    document.getElementById('assignForm')?.addEventListener('submit', function(e) {
        var checked = document.querySelectorAll('.product-checkbox:checked');
        if (checked.length === 0) {
            e.preventDefault();
            alert('Vui lòng chọn ít nhất một sản phẩm.');
        }
    });
</script>
}

@model IEnumerable<ErpOnlineOrder.Application.DTOs.AdminDTOs.StaffAccountDto>
@{
    ViewData["Title"] = "Gán quyền cho User";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user-tag me-2"></i>Gán quyền cho User
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Quản lý quyền hạn</a></li>
                    <li class="breadcrumb-item active">Gán quyền User</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <!-- Search -->
    <div class="card shadow mb-4">
        <div class="card-body py-2">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" id="searchUser" class="form-control" placeholder="Tìm kiếm theo tên, mã NV, username...">
            </div>
        </div>
    </div>

    <!-- User List -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-users me-1"></i> Danh sách nhân viên
                <span class="badge bg-secondary ms-2">@Model.Count() người</span>
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:15%">Mã NV</th>
                            <th style="width:25%">Họ tên</th>
                            <th style="width:15%">Username</th>
                            <th style="width:20%">Vai trò</th>
                            <th style="width:10%" class="text-center">Trạng thái</th>
                            <th style="width:10%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var idx = 1; }
                        @foreach (var staff in Model)
                        {
                            <tr class="user-row" data-search="@staff.Staff_code @staff.Full_name @staff.Username">
                                <td class="text-muted">@idx</td>
                                <td><code>@staff.Staff_code</code></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                             style="width:35px;height:35px;font-size:14px;">
                                            @(staff.Full_name?.FirstOrDefault())
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@staff.Full_name</div>
                                            <small class="text-muted">@staff.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@staff.Username</td>
                                <td>
                                    @if (staff.Roles?.Any() == true)
                                    {
                                        @foreach (var role in staff.Roles)
                                        {
                                            <span class="badge bg-info me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Chưa có</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (staff.Is_active)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Vô hiệu</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="UserPermissionDetails" asp-route-id="@staff.User_id" 
                                       class="btn btn-sm btn-primary" title="Quản lý quyền">
                                        <i class="fas fa-key me-1"></i> Quyền
                                    </a>
                                </td>
                            </tr>
                            idx++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchUser').addEventListener('input', function() {
            var query = this.value.toLowerCase();
            document.querySelectorAll('.user-row').forEach(function(row) {
                var search = row.dataset.search.toLowerCase();
                row.style.display = search.includes(query) ? '' : 'none';
            });
        });
    </script>
}

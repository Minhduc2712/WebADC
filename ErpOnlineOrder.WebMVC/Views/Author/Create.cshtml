@model ErpOnlineOrder.Domain.Models.Author
@{
    ViewData["Title"] = "Thêm tác giả";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Thêm tác giả mới</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tác giả</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thông tin tác giả</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author_code" class="form-label">Mã tác giả <span class="text-danger">*</span></label>
                                <input asp-for="Author_code" class="form-control" placeholder="VD: TG001..." />
                                <span asp-validation-for="Author_code" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author_name" class="form-label">Tên tác giả <span class="text-danger">*</span></label>
                                <input asp-for="Author_name" class="form-control" placeholder="Nhập tên tác giả..." />
                                <span asp-validation-for="Author_name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pen_name" class="form-label">Bút danh</label>
                                <input asp-for="Pen_name" class="form-control" placeholder="Nhập bút danh..." />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nationality" class="form-label">Quốc tịch</label>
                                <input asp-for="Nationality" class="form-control" placeholder="VD: Việt Nam..." />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email_author" class="form-label">Email</label>
                                <input asp-for="Email_author" class="form-control" type="email" placeholder="email@example.com" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone_number" class="form-label">Số điện thoại</label>
                                <input asp-for="Phone_number" class="form-control" placeholder="0xxx xxx xxx" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label">Tiểu sử</label>
                            <textarea asp-for="Biography" class="form-control" rows="3" placeholder="Giới thiệu về tác giả..."></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

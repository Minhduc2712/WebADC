@{
    ViewData["Title"] = "Gán quyền cho Role";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var roleId = (int)ViewBag.RoleId;
    var roleName = ViewBag.RoleName as string ?? "";
    var currentPermissions = ViewBag.CurrentPermissions as List<int> ?? new List<int>();
    var groupedPermissions = ViewBag.GroupedPermissions as Dictionary<string, List<ErpOnlineOrder.Application.DTOs.PermissionDTOs.PermissionDto>> 
        ?? new Dictionary<string, List<ErpOnlineOrder.Application.DTOs.PermissionDTOs.PermissionDto>>();
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-key me-2"></i>Gán quyền cho Role
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Quản lý phân quyền</a></li>
                <li class="breadcrumb-item active">Gán quyền</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-shield-alt me-1"></i> Role: @roleName
                    </h6>
                    <span class="badge bg-info" id="permissionCount">@currentPermissions.Count quyền đã gán</span>
                </div>
                <div class="card-body">
                    <form asp-action="AssignPermissions" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@roleId" />

                        <!-- Quick Actions -->
                        <div class="mb-3 d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-outline-primary" id="selectAll">
                                <i class="fas fa-check-double me-1"></i> Chọn tất cả
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="deselectAll">
                                <i class="fas fa-times me-1"></i> Bỏ chọn tất cả
                            </button>
                        </div>

                        <div class="border rounded p-3" style="max-height: 500px; overflow-y: auto;">
                            @if (groupedPermissions.Any())
                            {
                                @foreach (var group in groupedPermissions)
                                {
                                    var modulePermissionIds = group.Value.Select(p => p.Id).ToList();
                                    var checkedCount = modulePermissionIds.Count(id => currentPermissions.Contains(id));
                                    var allChecked = checkedCount == modulePermissionIds.Count;
                                    
                                    <div class="mb-4">
                                        <div class="d-flex align-items-center mb-2 p-2 bg-light rounded">
                                            <input type="checkbox" class="form-check-input me-2 module-checkbox" 
                                                   id="module_@group.Key.Replace(" ", "_")" data-module="@group.Key"
                                                   @(allChecked ? "checked" : "")>
                                            <label class="form-check-label fw-bold text-primary mb-0" for="module_@group.Key.Replace(" ", "_")">
                                                <i class="fas fa-folder-open me-1"></i> @group.Key
                                            </label>
                                            <span class="badge bg-secondary ms-2 module-count" data-module="@group.Key">@checkedCount / @group.Value.Count</span>
                                        </div>
                                        <div class="ms-4 ps-3 border-start border-primary">
                                            <div class="row">
                                                @foreach (var permission in group.Value)
                                                {
                                                    var isChecked = currentPermissions.Contains(permission.Id);
                                                    <div class="col-md-6 mb-2">
                                                        <div class="form-check">
                                                            <input class="form-check-input permission-checkbox" type="checkbox" 
                                                                   name="Permission_ids" value="@permission.Id" 
                                                                   id="perm_@permission.Id" data-module="@group.Key"
                                                                   @(isChecked ? "checked" : "")>
                                                            <label class="form-check-label" for="perm_@permission.Id">
                                                                <i class="fas fa-@GetActionIcon(permission.Permission_code) me-1 text-muted"></i>
                                                                @permission.Action_name
                                                                <small class="text-muted d-block">@permission.Permission_code</small>
                                                            </label>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-0 text-center py-4">
                                    <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                    Chưa có quyền nào trong hệ thống
                                </p>
                            }
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-1"></i> Thông tin
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        <tr>
                            <td class="text-muted">Role:</td>
                            <td><strong>@roleName</strong></td>
                        </tr>
                        <tr>
                            <td class="text-muted">Số quyền hiện tại:</td>
                            <td><span class="badge bg-primary" id="totalCount">@currentPermissions.Count</span></td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-lightbulb me-1"></i> Mô tả quyền
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 small">
                        <li class="mb-2"><i class="fas fa-eye text-info me-2"></i><strong>Xem:</strong> Xem danh sách và chi tiết</li>
                        <li class="mb-2"><i class="fas fa-plus text-success me-2"></i><strong>Thêm mới:</strong> Thêm mới dữ liệu</li>
                        <li class="mb-2"><i class="fas fa-edit text-warning me-2"></i><strong>Cập nhật:</strong> Cập nhật dữ liệu</li>
                        <li class="mb-2"><i class="fas fa-trash text-danger me-2"></i><strong>Xóa:</strong> Xóa dữ liệu</li>
                        <li class="mb-2"><i class="fas fa-file-export text-secondary me-2"></i><strong>Xuất file:</strong> Xuất file báo cáo</li>
                        <li class="mb-2"><i class="fas fa-check-circle text-primary me-2"></i><strong>Duyệt:</strong> Duyệt dữ liệu</li>
                        <li><i class="fas fa-user-tag text-purple me-2"></i><strong>Phân quyền:</strong> Gán quyền cho role/user</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetActionIcon(string permissionCode)
    {
        var action = permissionCode.Contains("_") 
            ? permissionCode.Substring(permissionCode.LastIndexOf('_') + 1).ToUpper() 
            : permissionCode;
        return action switch
        {
            "VIEW" => "eye",
            "CREATE" => "plus",
            "UPDATE" => "edit",
            "DELETE" => "trash",
            "EXPORT" => "file-export",
            "IMPORT" => "file-import",
            "APPROVE" => "check-circle",
            "REJECT" => "times-circle",
            "ASSIGN" => "user-tag",
            _ => "key"
        };
    }
}

@section Scripts {
    <script>
        // Select all
        document.getElementById('selectAll').addEventListener('click', function() {
            document.querySelectorAll('.permission-checkbox, .module-checkbox').forEach(function(cb) {
                cb.checked = true;
            });
            updateAllCounts();
        });

        // Deselect all
        document.getElementById('deselectAll').addEventListener('click', function() {
            document.querySelectorAll('.permission-checkbox, .module-checkbox').forEach(function(cb) {
                cb.checked = false;
            });
            updateAllCounts();
        });

        // Select/Deselect all permissions in a module
        document.querySelectorAll('.module-checkbox').forEach(function(moduleCheckbox) {
            moduleCheckbox.addEventListener('change', function() {
                var moduleName = this.dataset.module;
                var isChecked = this.checked;
                document.querySelectorAll('.permission-checkbox[data-module="' + moduleName + '"]').forEach(function(permCheckbox) {
                    permCheckbox.checked = isChecked;
                });
                updateAllCounts();
            });
        });

        // Update module checkbox when individual permissions change
        document.querySelectorAll('.permission-checkbox').forEach(function(permCheckbox) {
            permCheckbox.addEventListener('change', function() {
                var moduleName = this.dataset.module;
                updateModuleCheckbox(moduleName);
                updateAllCounts();
            });
        });

        function updateModuleCheckbox(moduleName) {
            var moduleCheckbox = document.querySelector('.module-checkbox[data-module="' + moduleName + '"]');
            var permissionsInModule = document.querySelectorAll('.permission-checkbox[data-module="' + moduleName + '"]');
            var checkedPermissions = document.querySelectorAll('.permission-checkbox[data-module="' + moduleName + '"]:checked');
            
            moduleCheckbox.checked = permissionsInModule.length === checkedPermissions.length;
            moduleCheckbox.indeterminate = checkedPermissions.length > 0 && checkedPermissions.length < permissionsInModule.length;
        }

        function updateAllCounts() {
            var totalChecked = document.querySelectorAll('.permission-checkbox:checked').length;
            document.getElementById('totalCount').textContent = totalChecked;
            document.getElementById('permissionCount').textContent = totalChecked + ' quyền đã gán';

            // Update module counts
            document.querySelectorAll('.module-count').forEach(function(badge) {
                var moduleName = badge.dataset.module;
                var total = document.querySelectorAll('.permission-checkbox[data-module="' + moduleName + '"]').length;
                var checked = document.querySelectorAll('.permission-checkbox[data-module="' + moduleName + '"]:checked').length;
                badge.textContent = checked + ' / ' + total;
            });
        }
    </script>
}

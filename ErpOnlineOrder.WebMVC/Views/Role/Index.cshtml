@model IEnumerable<ErpOnlineOrder.Application.DTOs.PermissionDTOs.RoleDto>
@{
    ViewData["Title"] = "Quản lý phân quyền";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var canCreate = ViewBag.CanCreate ?? false;
    var canUpdate = ViewBag.CanUpdate ?? false;
    var canDelete = ViewBag.CanDelete ?? false;
    var canAssign = ViewBag.CanAssign ?? false;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user-shield me-2"></i>Quản lý phân quyền
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản lý phân quyền</li>
                </ol>
            </nav>
        </div>
        @if (canCreate)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm Role
            </a>
        }
    </div>

    <!-- Role Cards -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card shadow h-100 role-card">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-shield-alt me-1"></i> @role.Role_name
                            </h6>
                            @if (canUpdate || canDelete || canAssign)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@role.Id">
                                                <i class="fas fa-eye text-info me-2"></i>Xem chi tiết
                                            </a>
                                        </li>
                                        @if (canUpdate)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@role.Id">
                                                    <i class="fas fa-edit text-warning me-2"></i>Chỉnh sửa
                                                </a>
                                            </li>
                                        }
                                        @if (canAssign)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-action="AssignPermissions" asp-route-id="@role.Id">
                                                    <i class="fas fa-key text-success me-2"></i>Gán quyền
                                                </a>
                                            </li>
                                        }
                                        @if (canDelete)
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <button type="button" class="dropdown-item text-danger"
                                                        onclick="showDeleteModal('@role.Role_name', '@role.Id')">
                                                    <i class="fas fa-trash me-2"></i>Xóa
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1 text-muted">Số quyền</div>
                                    <div class="h5 mb-0 font-weight-bold">@role.Permission_count</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-key fa-2x text-gray-300"></i>
                                </div>
                            </div>
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Tạo ngày: @role.Created_at.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                @if (canAssign)
                                {
                                    <a asp-action="AssignPermissions" asp-route-id="@role.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-key me-1"></i> Gán quyền
                                    </a>
                                }
                                else
                                {
                                    <span></span>
                                }
                                <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye me-1"></i> Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-shield-alt fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có role nào</h5>
                        @if (canCreate)
                        {
                            <p class="text-muted">Bấm "Thêm Role" để tạo role mới</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Thêm Role
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Xóa Role</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn <strong class="text-danger">xóa vĩnh viễn</strong> role <strong id="deleteRoleName"></strong>?</p>
                <small class="text-muted">Thao tác này không thể hoàn tác!</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Hủy
                </button>
                <form id="deleteForm" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteRoleId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(roleName, roleId) {
            document.getElementById('deleteRoleName').textContent = roleName;
            document.getElementById('deleteRoleId').value = roleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<style>
    .text-gray-300 { color: #dddfeb !important; }
    .role-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .role-card:hover { transform: translateY(-3px); box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,.15) !important; }
</style>

@model ErpOnlineOrder.Domain.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var selectedCategories = Model.Product_Categories?.Select(pc => pc.Category_id.ToString()).ToList() ?? new List<string>();
    var selectedAuthors = Model.Product_Authors?.Select(pa => pa.Author_id.ToString()).ToList() ?? new List<string>();
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Sửa sản phẩm</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Sản phẩm</a></li>
                <li class="breadcrumb-item active">Sửa</li>
            </ol>
        </nav>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Created_by" />
        <input type="hidden" asp-for="Created_at" />
        <input type="hidden" asp-for="Is_deleted" />
        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin cơ bản</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Product_code" class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                <input asp-for="Product_code" class="form-control" />
                                <span asp-validation-for="Product_code" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Product_name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input asp-for="Product_name" class="form-control" />
                                <span asp-validation-for="Product_name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Product_price" class="form-label">Giá</label>
                                <input asp-for="Product_price" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Tax_rate" class="form-label">Thuế suất (%)</label>
                                <input asp-for="Tax_rate" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product_description" class="form-label">Mô tả</label>
                            <textarea asp-for="Product_description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product_link" class="form-label">Link sản phẩm</label>
                            <input asp-for="Product_link" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0"><i class="fas fa-cogs me-2"></i>Phân loại</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Publisher_id" class="form-label">Nhà xuất bản</label>
                            <select asp-for="Publisher_id" class="form-select">
                                <option value="">-- Chọn NXB --</option>
                                @if (ViewBag.Publishers != null)
                                {
                                    foreach (var item in ViewBag.Publishers as SelectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.Publisher_id?.ToString())">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cover_type_id" class="form-label">Loại bìa</label>
                            <select asp-for="Cover_type_id" class="form-select">
                                <option value="">-- Chọn loại bìa --</option>
                                @if (ViewBag.CoverTypes != null)
                                {
                                    foreach (var item in ViewBag.CoverTypes as SelectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.Cover_type_id?.ToString())">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Distributor_id" class="form-label">Nhà phân phối</label>
                            <select asp-for="Distributor_id" class="form-select">
                                <option value="">-- Chọn NPP --</option>
                                @if (ViewBag.Distributors != null)
                                {
                                    foreach (var item in ViewBag.Distributors as SelectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.Distributor_id?.ToString())">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <select name="categoryIds" class="form-select" multiple size="4">
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var cat in ViewBag.Categories as Microsoft.AspNetCore.Mvc.Rendering.MultiSelectList)
                                    {
                                        var isSelected = selectedCategories.Contains(cat.Value);
                                        <option value="@cat.Value" selected="@isSelected">@cat.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tác giả</label>
                            <select name="authorIds" class="form-select" multiple size="4">
                                @if (ViewBag.Authors != null)
                                {
                                    foreach (var auth in ViewBag.Authors as Microsoft.AspNetCore.Mvc.Rendering.MultiSelectList)
                                    {
                                        var isSelected = selectedAuthors.Contains(auth.Value);
                                        <option value="@auth.Value" selected="@isSelected">@auth.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Hủy
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model ErpOnlineOrder.Application.DTOs.InvoiceDTOs.InvoiceDto
@{
    ViewData["Title"] = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    
    var statusClass = Model.Status switch
    {
        "Draft" => "bg-secondary",
        "Pending" => "bg-warning text-dark",
        "Confirmed" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };
    var statusText = Model.Status switch
    {
        "Draft" => "Nháp",
        "Pending" => "Chờ xử lý",
        "Confirmed" => "Đã xác nhận",
        "Completed" => "Hoàn thành",
        "Cancelled" => "Đã hủy",
        _ => Model.Status
    };
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Chi tiết hóa đơn</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Hóa đơn</a></li>
                <li class="breadcrumb-item active">@Model.Invoice_code</li>
            </ol>
        </nav>
    </div>
    <div>
        @if (Model.Status != "Completed" && Model.Status != "Cancelled" && Model.Details.Count > 1)
        {
            <a href="@Url.Action("Split", new { id = Model.Id })" class="btn btn-info me-2">
                <i class="fas fa-expand-arrows-alt me-1"></i>Tách hóa đơn
            </a>
        }
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="table-card mb-4">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>Thông tin hóa đơn
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="text-muted small">Mã hóa đơn</label>
                    <p class="mb-0 fw-semibold">@Model.Invoice_code</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Trạng thái</label>
                    <p class="mb-0"><span class="badge @statusClass">@statusText</span></p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Ngày lập</label>
                    <p class="mb-0">@Model.Invoice_date.ToString("dd/MM/yyyy")</p>
                </div>
                @if (Model.Parent_invoice_id.HasValue)
                {
                    <div class="mb-3">
                        <label class="text-muted small">Hóa đơn gốc</label>
                        <p class="mb-0">
                            <a href="@Url.Action("Details", new { id = Model.Parent_invoice_id })">
                                @Model.Parent_invoice_code
                            </a>
                        </p>
                    </div>
                }
            </div>
        </div>
        
        <div class="table-card mb-4">
            <div class="card-header">
                <i class="fas fa-user me-2"></i>Khách hàng
            </div>
            <div class="card-body">
                <div class="mb-0">
                    <label class="text-muted small">Tên khách hàng</label>
                    <p class="mb-0 fw-semibold">@Model.Customer_name</p>
                </div>
            </div>
        </div>
        
        <div class="table-card">
            <div class="card-header">
                <i class="fas fa-calculator me-2"></i>Tổng kết
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Tổng tiền hàng:</span>
                    <span>@Model.Total_amount.ToString("N0") VNĐ</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Thuế:</span>
                    <span>@Model.Tax_amount.ToString("N0") VNĐ</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <span class="fw-bold">Thành tiền:</span>
                    <span class="text-success fw-bold fs-5">@Model.Grand_total.ToString("N0") VNĐ</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="table-card">
            <div class="card-header">
                <i class="fas fa-list me-2"></i>Chi tiết hóa đơn (@Model.Details.Count sản phẩm)
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thuế</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach (var detail in Model.Details)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@detail.Product_name</td>
                                    <td class="text-center">@detail.Quantity</td>
                                    <td class="text-end">@detail.Unit_price.ToString("N0")</td>
                                    <td class="text-end">@detail.Tax_rate%</td>
                                    <td class="text-end fw-semibold">@detail.Total_price.ToString("N0")</td>
                                </tr>
                                index++;
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end fw-bold">Tổng cộng:</td>
                                <td class="text-end text-success fw-bold">@Model.Grand_total.ToString("N0") VNĐ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

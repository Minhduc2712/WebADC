@model IEnumerable<ErpOnlineOrder.Application.DTOs.InvoiceDTOs.InvoiceDto>
@{
    ViewData["Title"] = "Quản lý hóa đơn";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Quản lý hóa đơn</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item active">Hóa đơn</li>
            </ol>
        </nav>
    </div>
    <a href="@Url.Action("Merge")" class="btn btn-primary">
        <i class="fas fa-compress-arrows-alt me-1"></i>Gộp hóa đơn
    </a>
</div>

<!-- Bộ lọc -->
<div class="table-card mb-4">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>Bộ lọc
    </div>
    <div class="card-body p-4">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="Draft" selected="@(ViewBag.Status == "Draft")">Nháp</option>
                        <option value="Pending" selected="@(ViewBag.Status == "Pending")">Chờ xử lý</option>
                        <option value="Confirmed" selected="@(ViewBag.Status == "Confirmed")">Đã xác nhận</option>
                        <option value="Completed" selected="@(ViewBag.Status == "Completed")">Hoàn thành</option>
                        <option value="Cancelled" selected="@(ViewBag.Status == "Cancelled")">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i>Lọc
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Thống kê nhanh -->
<div class="row mb-4">
    @{
        var draft = Model.Count(i => i.Status == "Draft");
        var pending = Model.Count(i => i.Status == "Pending");
        var confirmed = Model.Count(i => i.Status == "Confirmed");
        var completed = Model.Count(i => i.Status == "Completed");
        var totalAmount = Model.Sum(i => i.Grand_total);
    }
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between">
                <div>
                    <h3 class="mb-1">@Model.Count()</h3>
                    <span class="text-muted">Tổng hóa đơn</span>
                </div>
                <div class="stat-icon blue">
                    <i class="fas fa-file-invoice"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between">
                <div>
                    <h3 class="mb-1">@pending</h3>
                    <span class="text-muted">Chờ xử lý</span>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #ffc107, #ff9800);">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between">
                <div>
                    <h3 class="mb-1">@completed</h3>
                    <span class="text-muted">Hoàn thành</span>
                </div>
                <div class="stat-icon green">
                    <i class="fas fa-check-double"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between">
                <div>
                    <h5 class="mb-1">@totalAmount.ToString("N0")</h5>
                    <span class="text-muted">Tổng doanh thu (VNĐ)</span>
                </div>
                <div class="stat-icon orange">
                    <i class="fas fa-coins"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Danh sách hóa đơn -->
<div class="table-card">
    <div class="card-header">
        <i class="fas fa-file-invoice me-2"></i>Danh sách hóa đơn (@Model.Count() hóa đơn)
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày lập</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-end">Thuế</th>
                        <th class="text-end">Thành tiền</th>
                        <th>Trạng thái</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                Không có hóa đơn nào
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var invoice in Model.OrderByDescending(i => i.Invoice_date))
                        {
                            var statusClass = invoice.Status switch
                            {
                                "Draft" => "bg-secondary",
                                "Pending" => "bg-warning text-dark",
                                "Confirmed" => "bg-primary",
                                "Completed" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                            var statusText = invoice.Status switch
                            {
                                "Draft" => "Nháp",
                                "Pending" => "Chờ xử lý",
                                "Confirmed" => "Đã xác nhận",
                                "Completed" => "Hoàn thành",
                                "Cancelled" => "Đã hủy",
                                _ => invoice.Status
                            };
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@invoice.Invoice_code</span>
                                    @if (invoice.Parent_invoice_id.HasValue)
                                    {
                                        <br /><small class="text-muted">Từ: @invoice.Parent_invoice_code</small>
                                    }
                                </td>
                                <td>@invoice.Customer_name</td>
                                <td>@invoice.Invoice_date.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">@invoice.Total_amount.ToString("N0")</td>
                                <td class="text-end">@invoice.Tax_amount.ToString("N0")</td>
                                <td class="text-end fw-bold text-success">@invoice.Grand_total.ToString("N0")</td>
                                <td><span class="badge @statusClass">@statusText</span></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (invoice.Status != "Completed" && invoice.Status != "Cancelled" && invoice.Details.Count > 1)
                                        {
                                            <a asp-action="Split" asp-route-id="@invoice.Id" class="btn btn-outline-info" title="Tách hóa đơn">
                                                <i class="fas fa-expand-arrows-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

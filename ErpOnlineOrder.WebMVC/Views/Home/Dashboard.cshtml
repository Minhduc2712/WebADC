@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Dashboard</h4>
    <div>
        <span class="text-muted">Hôm nay: @DateTime.Now.ToString("dd/MM/yyyy")</span>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Tổng đơn hàng</h6>
                    <h3 class="mb-0">1,234</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 12% so với tháng trước</small>
                </div>
                <div class="stat-icon blue">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Doanh thu</h6>
                    <h3 class="mb-0">2.5 tỷ</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 8% so với tháng trước</small>
                </div>
                <div class="stat-icon green">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Khách hàng</h6>
                    <h3 class="mb-0">856</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 5% so với tháng trước</small>
                </div>
                <div class="stat-icon orange">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Sản phẩm</h6>
                    <h3 class="mb-0">450</h3>
                    <small class="text-muted"><i class="fas fa-minus"></i> Không thay đổi</small>
                </div>
                <div class="stat-icon red">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Orders -->
    <div class="col-md-8 mb-4">
        <div class="table-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-shopping-cart me-2"></i>Đơn hàng gần đây</span>
                <a href="@Url.Action("Index", "Order")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>ORD-001</strong></td>
                            <td>Nguyễn Văn A</td>
                            <td>1,500,000 đ</td>
                            <td><span class="badge bg-success">Hoàn thành</span></td>
                            <td>05/02/2026</td>
                        </tr>
                        <tr>
                            <td><strong>ORD-002</strong></td>
                            <td>Trần Thị B</td>
                            <td>2,300,000 đ</td>
                            <td><span class="badge bg-warning text-dark">Đang xử lý</span></td>
                            <td>05/02/2026</td>
                        </tr>
                        <tr>
                            <td><strong>ORD-003</strong></td>
                            <td>Lê Văn C</td>
                            <td>850,000 đ</td>
                            <td><span class="badge bg-info">Đang giao</span></td>
                            <td>04/02/2026</td>
                        </tr>
                        <tr>
                            <td><strong>ORD-004</strong></td>
                            <td>Phạm Thị D</td>
                            <td>3,200,000 đ</td>
                            <td><span class="badge bg-success">Hoàn thành</span></td>
                            <td>04/02/2026</td>
                        </tr>
                        <tr>
                            <td><strong>ORD-005</strong></td>
                            <td>Hoàng Văn E</td>
                            <td>1,800,000 đ</td>
                            <td><span class="badge bg-danger">Đã hủy</span></td>
                            <td>03/02/2026</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Top Products -->
    <div class="col-md-4 mb-4">
        <!-- Quick Actions -->
        <div class="stat-card mb-4">
            <h6 class="mb-3"><i class="fas fa-bolt me-2"></i>Thao tác nhanh</h6>
            <div class="d-grid gap-2">
                <a href="@Url.Action("Create", "Order")" class="btn btn-outline-primary">
                    <i class="fas fa-plus me-2"></i>Tạo đơn hàng mới
                </a>
                <a href="@Url.Action("Create", "Product")" class="btn btn-outline-success">
                    <i class="fas fa-box me-2"></i>Thêm sản phẩm
                </a>
                <a href="@Url.Action("Create", "Customer")" class="btn btn-outline-info">
                    <i class="fas fa-user-plus me-2"></i>Thêm khách hàng
                </a>
            </div>
        </div>

        <!-- Top Products -->
        <div class="stat-card">
            <h6 class="mb-3"><i class="fas fa-fire me-2"></i>Sản phẩm bán chạy</h6>
            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <div>
                        <strong>Sách Toán học lớp 12</strong>
                        <br><small class="text-muted">150 đã bán</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">45,000 đ</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <div>
                        <strong>Sách Văn học lớp 11</strong>
                        <br><small class="text-muted">120 đã bán</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">40,000 đ</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <div>
                        <strong>Sách Tiếng Anh lớp 10</strong>
                        <br><small class="text-muted">98 đã bán</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">50,000 đ</span>
                </div>
            </div>
        </div>
    </div>
</div>
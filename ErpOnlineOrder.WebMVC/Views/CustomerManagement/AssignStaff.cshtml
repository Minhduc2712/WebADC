@{
    ViewData["Title"] = "Gán cán bộ phụ trách";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var customer = ViewBag.Customer as ErpOnlineOrder.Domain.Models.Customer;
    var staffList = ViewBag.StaffList as List<ErpOnlineOrder.Domain.Models.Staff> ?? new List<ErpOnlineOrder.Domain.Models.Staff>();
    var provinces = ViewBag.Provinces as List<ErpOnlineOrder.Domain.Models.Province> ?? new List<ErpOnlineOrder.Domain.Models.Province>();
    var existingAssignments = ViewBag.ExistingAssignments as List<ErpOnlineOrder.Domain.Models.Customer_management> ?? new List<ErpOnlineOrder.Domain.Models.Customer_management>();
    var assignedStaffIds = existingAssignments.Select(a => a.Staff_id).ToHashSet();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-user-tag me-2 text-success"></i>Gán cán bộ phụ trách</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Khách hàng</a></li>
                <li class="breadcrumb-item active">Gán cán bộ</li>
            </ol>
        </nav>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<!-- Thông tin khách hàng -->
@if (customer != null)
{
    <div class="table-card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-2"></i>Thông tin khách hàng
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                             style="width: 60px; height: 60px; font-size: 24px;">
                            @(customer.Full_name?.Length > 0 ? customer.Full_name.Substring(0, 1).ToUpper() : "?")
                        </div>
                        <div>
                            <h5 class="mb-0">@customer.Full_name</h5>
                            <span class="badge bg-secondary">@customer.Customer_code</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-6 mb-2">
                            <small class="text-muted d-block">Số điện thoại</small>
                            <strong>@(customer.Phone_number ?? "Chưa cập nhật")</strong>
                        </div>
                        <div class="col-6 mb-2">
                            <small class="text-muted d-block">Địa chỉ</small>
                            <strong>@(customer.Address ?? "Chưa cập nhật")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row g-4">
    <!-- Cán bộ đã gán -->
    <div class="col-lg-7">
        <div class="table-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-users me-2"></i>Cán bộ phụ trách hiện tại (@existingAssignments.Count)</span>
            </div>
            <div class="card-body p-0">
                @if (!existingAssignments.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-user-slash fa-3x mb-3 d-block opacity-50"></i>
                        <p class="mb-1">Chưa có cán bộ phụ trách nào</p>
                        <small>Sử dụng form bên phải để gán cán bộ</small>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Cán bộ</th>
                                    <th>Tỉnh/Thành phố</th>
                                    <th>Ngày gán</th>
                                    <th style="width: 80px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assign in existingAssignments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2"
                                                     style="width: 35px; height: 35px; font-size: 14px;">
                                                    @(assign.Staff?.Full_name?.Length > 0 ? assign.Staff.Full_name.Substring(0, 1).ToUpper() : "?")
                                                </div>
                                                <div>
                                                    <strong>@(assign.Staff?.Full_name ?? "N/A")</strong>
                                                    <div class="small text-muted">@(assign.Staff?.Staff_code ?? "")</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (assign.Province != null)
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    <i class="fas fa-map-marker-alt me-1 text-danger"></i>@assign.Province.Province_name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="small text-muted">@assign.Created_at.ToString("dd/MM/yyyy HH:mm")</span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Xóa gán"
                                                    data-bs-toggle="tooltip"
                                                    onclick="confirmRemove(@assign.Id, '@(assign.Staff?.Full_name ?? "N/A")')">
                                                <i class="fas fa-unlink"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Form gán mới -->
    <div class="col-lg-5">
        <div class="table-card">
            <div class="card-header bg-success bg-opacity-10">
                <i class="fas fa-plus-circle me-2 text-success"></i>Gán cán bộ mới
            </div>
            <div class="card-body p-4">
                <form asp-action="AssignStaff" asp-route-id="@customer?.Id" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user-tie me-1 text-success"></i>Chọn cán bộ <span class="text-danger">*</span>
                        </label>
                        <select name="Staff_id" class="form-select" required id="staffSelect">
                            <option value="">-- Chọn cán bộ --</option>
                            @foreach (var staff in staffList)
                            {
                                var isAssigned = assignedStaffIds.Contains(staff.Id);
                                if (isAssigned)
                                {
                                    <option value="@staff.Id" class="text-muted" disabled>
                                        @staff.Full_name (@staff.Staff_code) - Đã gán
                                    </option>
                                }
                                else
                                {
                                    <option value="@staff.Id">
                                        @staff.Full_name (@staff.Staff_code)
                                    </option>
                                }
                            }
                        </select>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>Chọn cán bộ sẽ phụ trách quản lý khách hàng này
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-map-marker-alt me-1 text-danger"></i>Tỉnh/Thành phố <span class="text-danger">*</span>
                        </label>
                        <select name="Province_id" class="form-select" required id="provinceSelect">
                            <option value="">-- Chọn tỉnh/thành phố --</option>
                            @foreach (var province in provinces)
                            {
                                <option value="@province.Id">@province.Province_name</option>
                            }
                        </select>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>Tỉnh/thành phố quản lý
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success" id="btnSubmit">
                            <i class="fas fa-user-tag me-1"></i>Gán cán bộ phụ trách
                        </button>
                    </div>
                </form>

                @if (existingAssignments.Any())
                {
                    <hr class="my-3" />
                    <div class="d-flex align-items-center text-muted small">
                        <i class="fas fa-info-circle me-2"></i>
                        Hiện tại đã có <strong class="mx-1">@existingAssignments.Count</strong> cán bộ được gán phụ trách.
                        Một khách hàng có thể có nhiều cán bộ phụ trách.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="removeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Xác nhận xóa gán</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa gán cán bộ "<strong id="removeStaffName"></strong>" 
                   khỏi khách hàng "<strong>@(customer?.Full_name ?? "")</strong>"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="removeForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="customerId" value="@customer?.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-unlink me-1"></i>Xóa gán
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .form-select option:disabled {
        color: #adb5bd;
        font-style: italic;
    }
</style>
}

@section Scripts {
<script>
    // Khởi tạo tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });

    function confirmRemove(id, staffName) {
        document.getElementById('removeStaffName').textContent = staffName;
        document.getElementById('removeForm').action = '@Url.Action("RemoveAssignment")/' + id;
        new bootstrap.Modal(document.getElementById('removeModal')).show();
    }

    // Disable submit nếu chưa chọn đủ
    document.getElementById('btnSubmit').addEventListener('click', function(e) {
        var staff = document.getElementById('staffSelect').value;
        var province = document.getElementById('provinceSelect').value;
        if (!staff || !province) {
            e.preventDefault();
            alert('Vui lòng chọn đầy đủ cán bộ và tỉnh/thành phố.');
        }
    });
</script>
}

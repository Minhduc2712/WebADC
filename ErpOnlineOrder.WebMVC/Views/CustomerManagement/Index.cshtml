@model IEnumerable<ErpOnlineOrder.Application.DTOs.CustomerDTO>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var assignments = ViewBag.Assignments as List<ErpOnlineOrder.Domain.Models.Customer_management> ?? new List<ErpOnlineOrder.Domain.Models.Customer_management>();
    var canAssign = (bool)(ViewBag.CanAssign ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-users me-2 text-primary"></i>Quản lý khách hàng</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item active">Khách hàng</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        @if (canAssign)
        {
            <a href="@Url.Action("StaffAssignment")" class="btn btn-outline-success">
                <i class="fas fa-user-tag me-1"></i>Gán cán bộ phụ trách
            </a>
        }
        @if (Context.Session.HasPermission("CUSTOMER_CREATE"))
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Thêm khách hàng
            </a>
        }
    </div>
</div>

<!-- Bộ lọc -->
<div class="table-card mb-4">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>Tìm kiếm
    </div>
    <div class="card-body p-4">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" 
                           placeholder="Nhập mã KH, tên, số điện thoại..." />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i>Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Danh sách khách hàng -->
<div class="table-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-users me-2"></i>Danh sách khách hàng (@Model.Count() khách hàng)</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã KH</th>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Cán bộ phụ trách</th>
                        <th>Ngày tạo</th>
                        <th style="width: 160px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                Không có khách hàng nào
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var customer in Model)
                        {
                            var customerAssignments = assignments.Where(a => a.Customer_id == customer.Id).ToList();
                            <tr>
                                <td><span class="badge bg-secondary">@customer.Customer_code</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" 
                                             style="width: 35px; height: 35px; font-size: 14px;">
                                            @(customer.Full_name?.Length > 0 ? customer.Full_name.Substring(0, 1).ToUpper() : "?")
                                        </div>
                                        <strong>@customer.Full_name</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.Phone_number))
                                    {
                                        <i class="fas fa-phone text-muted me-1"></i>@customer.Phone_number
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.Address))
                                    {
                                        <span title="@customer.Address">
                                            @(customer.Address.Length > 30 ? customer.Address.Substring(0, 30) + "..." : customer.Address)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    @if (customerAssignments.Any())
                                    {
                                        @foreach (var assign in customerAssignments)
                                        {
                                            <span class="badge bg-success-subtle text-success me-1 mb-1" title="@assign.Staff?.Staff_code">
                                                <i class="fas fa-user-tie me-1"></i>@(assign.Staff?.Full_name ?? "N/A")
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">
                                            <i class="fas fa-user-slash me-1"></i>Chưa gán
                                        </span>
                                    }
                                </td>
                                <td>@customer.Created_at.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-primary" title="Xem chi tiết"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (canAssign)
                                        {
                                            <a asp-action="AssignStaff" asp-route-id="@customer.Id" class="btn btn-outline-success" title="Gán cán bộ phụ trách"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-user-tag"></i>
                                            </a>
                                        }
                                        @if (Context.Session.HasPermission("CUSTOMER_UPDATE"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-outline-warning" title="Sửa"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (Context.Session.HasPermission("CUSTOMER_DELETE"))
                                        {
                                            <button type="button" class="btn btn-outline-danger" title="Xóa"
                                                    data-bs-toggle="tooltip"
                                                    onclick="confirmDelete(@customer.Id, '@customer.Full_name')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Context.Session.HasPermission("CUSTOMER_DELETE"))
{
    <!-- Modal xác nhận xóa -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa khách hàng "<strong id="deleteCustomerName"></strong>"?</p>
                    <p class="text-muted mb-0">Hành động này không thể hoàn tác.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form id="deleteForm" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    // Khởi tạo tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });

    function confirmDelete(id, name) {
        document.getElementById('deleteCustomerName').textContent = name;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + id;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
}

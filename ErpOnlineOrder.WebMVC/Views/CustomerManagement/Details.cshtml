@model ErpOnlineOrder.Domain.Models.Customer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var customerAssignments = ViewBag.Assignments as List<ErpOnlineOrder.Domain.Models.Customer_management> ?? new List<ErpOnlineOrder.Domain.Models.Customer_management>();
    var canAssign = (bool)(ViewBag.CanAssign ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-user me-2 text-primary"></i>Chi tiết khách hàng</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Khách hàng</a></li>
                <li class="breadcrumb-item active">@Model.Full_name</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        @if (canAssign)
        {
            <a href="@Url.Action("AssignStaff", new { id = Model.Id })" class="btn btn-outline-success">
                <i class="fas fa-user-tag me-1"></i>Gán cán bộ
            </a>
        }
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="table-card">
            <div class="card-body text-center p-4">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" 
                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                    @(Model.Full_name?.Length > 0 ? Model.Full_name.Substring(0, 1).ToUpper() : "?")
                </div>
                <h5 class="mb-2">@Model.Full_name</h5>
                <span class="badge bg-secondary">@Model.Customer_code</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="table-card">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>Thông tin khách hàng
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Mã khách hàng</label>
                        <p class="mb-0 fw-semibold">@Model.Customer_code</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Họ và tên</label>
                        <p class="mb-0 fw-semibold">@Model.Full_name</p>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Số điện thoại</label>
                        <p class="mb-0 fw-semibold">
                            <i class="fas fa-phone text-primary me-1"></i>@(Model.Phone_number ?? "Chưa cập nhật")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Ngày tạo</label>
                        <p class="mb-0 fw-semibold">@Model.Created_at.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="text-muted small">Địa chỉ</label>
                    <p class="mb-0 fw-semibold">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <i class="fas fa-map-marker-alt text-danger me-1"></i>@Model.Address
                        }
                        else
                        {
                            <span class="text-muted">Chưa cập nhật</span>
                        }
                    </p>
                </div>
                
                @if (Model.User != null)
                {
                    <hr />
                    <h6 class="mb-3"><i class="fas fa-user-circle me-2"></i>Tài khoản liên kết</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-muted small">Username</label>
                            <p class="mb-0 fw-semibold">@Model.User.Username</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Email</label>
                            <p class="mb-0 fw-semibold">@Model.User.Email</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Cán bộ phụ trách -->
<div class="row mt-4">
    <div class="col-12">
        <div class="table-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-user-tie me-2 text-success"></i>Cán bộ phụ trách (@customerAssignments.Count)</span>
                @if (canAssign)
                {
                    <a href="@Url.Action("AssignStaff", new { id = Model.Id })" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-plus me-1"></i>Gán thêm
                    </a>
                }
            </div>
            <div class="card-body p-0">
                @if (!customerAssignments.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-user-slash fa-2x mb-2 d-block opacity-50"></i>
                        <p class="mb-0">Chưa có cán bộ phụ trách</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Cán bộ</th>
                                    <th>Mã nhân viên</th>
                                    <th>Tỉnh/Thành phố</th>
                                    <th>Ngày gán</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assign in customerAssignments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2"
                                                     style="width: 32px; height: 32px; font-size: 13px;">
                                                    @(assign.Staff?.Full_name?.Length > 0 ? assign.Staff.Full_name.Substring(0, 1).ToUpper() : "?")
                                                </div>
                                                <strong>@(assign.Staff?.Full_name ?? "N/A")</strong>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-secondary">@(assign.Staff?.Staff_code ?? "")</span></td>
                                        <td>
                                            @if (assign.Province != null)
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    <i class="fas fa-map-marker-alt me-1 text-danger"></i>@assign.Province.Province_name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-muted small">@assign.Created_at.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

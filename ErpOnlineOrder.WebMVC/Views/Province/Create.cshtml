@model ErpOnlineOrder.Application.DTOs.ProvinceDTOs.CreateProvinceDto
@{
    ViewData["Title"] = "Thêm tỉnh/thành phố";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Thêm tỉnh/thành phố mới</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Region")">Khu vực</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tỉnh/Thành phố</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thông tin tỉnh/thành phố</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Province_code" class="form-label">Mã tỉnh/thành <span class="text-danger">*</span></label>
                            <input asp-for="Province_code" class="form-control" placeholder="VD: HN, HCM, DN..." />
                            <span asp-validation-for="Province_code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Province_name" class="form-label">Tên tỉnh/thành <span class="text-danger">*</span></label>
                            <input asp-for="Province_name" class="form-control" placeholder="VD: Hà Nội, TP. Hồ Chí Minh..." />
                            <span asp-validation-for="Province_name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Region_id" class="form-label">Khu vực <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.Region_id, ViewBag.Regions as SelectList, "-- Chọn khu vực --", new { @class = "form-select" })
                            <span asp-validation-for="Region_id" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model ErpOnlineOrder.Application.DTOs.CoverTypeDTOs.UpdateCoverTypeDto
@{
    ViewData["Title"] = "Sửa loại bìa";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h4 class="mb-0">Sửa loại bìa</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Loại bìa</a></li>
                <li class="breadcrumb-item active">Sửa</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0"><i class="fas fa-edit me-2"></i>Thông tin loại bìa</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Cover_type_code" class="form-label">Mã loại bìa <span class="text-danger">*</span></label>
                            <input asp-for="Cover_type_code" class="form-control" />
                            <span asp-validation-for="Cover_type_code" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cover_type_name" class="form-label">Tên loại bìa <span class="text-danger">*</span></label>
                            <input asp-for="Cover_type_name" class="form-control" />
                            <span asp-validation-for="Cover_type_name" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
